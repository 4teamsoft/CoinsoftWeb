<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="default" extends="struts-default">
        <action name="index">
            <result>index.jsp</result>
        </action>
        <action name="product" class="pe.edu.utp.struts2sample.actions.ProductAction">
            <result name="success">showProduct.jsp</result>
            <result name="input">index.jsp</result>
        </action>


        <action name="user" class="com.coinsoft.actions.UserAction">
            <result name="success">validationAccess.jsp</result>
            <result name="input">login.jsp</result>
        </action>


    </package>
</struts>