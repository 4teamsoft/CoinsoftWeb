<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="username">
        <field-validator type="requiredstring">
            <message>A value is required in Username</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[-_a-zA-Z0-9.]+$</param>
            <message>UserName must include only Alphabet characters and number.</message>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message>A value is required in Password</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[-_a-zA-Z0-9.]+$</param>
            <message>Password must include only Alphabet characters and number.</message>
        </field-validator>
    </field>
</validators>