<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="code">
        <field-validator type="requiredstring">
            <message>A value is required in Code</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9]*$</param>
            <message>Code must include only number.</message>
        </field-validator>
    </field>

    <field name="dni">
        <field-validator type="requiredstring">
            <message>A value is required in dni</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9]*$</param>
            <message>Dni must include only number.</message>
        </field-validator>
    </field>

    <field name="name">
        <field-validator type="requiredstring">
            <message>A value is required in name</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[A-z]+$</param>
            <message>Name must include only Alphabet characters.</message>
        </field-validator>
    </field>

    <field name="lastName">
        <field-validator type="requiredstring">
            <message>A value is required in lastName</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[A-z]+$</param>
            <message>Last Name must include only Alphabet characters.</message>
        </field-validator>
    </field>

    <field name="age">
        <field-validator type="requiredstring">
            <message>A value is required in age</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9]*$</param>
            <message>Age must include only number.</message>
        </field-validator>
    </field>

    <field name="mail">
        <field-validator type="requiredstring">
            <message>A value is required in mail</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[A-Z0-9._%+-]+@(?:[A-Z0-9-]+\.)+[A-Z]{2,}$</param>
            <message>Error unknown.</message>
        </field-validator>
    </field>


</validators>