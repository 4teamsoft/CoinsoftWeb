<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">


<validators>
    <field name="codeLoan">
        <field-validator type="requiredstring">
            <message>A value is required in Code Loan</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9]*$</param>
            <message>Code Loan must include only number.</message>
        </field-validator>
    </field>

    <field name="dateStart">
        <field-validator type="requiredstring">
            <message>A value is required in date start</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9/]*$</param>
            <message>date start must include only a date</message>
        </field-validator>
    </field>


    <field name="amount">
        <field-validator type="requiredstring">
            <message>A value is required in amount</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9.]*$</param>
            <message>Amount must include only number.</message>
        </field-validator>
    </field>

    <field name="numberQuota">
        <field-validator type="requiredstring">
            <message>A value is required in number quota</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9]*$</param>
            <message>number quota must include only number</message>
        </field-validator>
    </field>

    <field name="day">
        <field-validator type="requiredstring">
            <message>A value is required in number Day</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9]*$</param>
            <message>Day quota must include only number</message>
        </field-validator>
    </field>

    <field name="type">
        <field-validator type="requiredstring">
            <message>A value is required in Type</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[0-9]*$</param>
            <message>Type must include only number.</message>
        </field-validator>
    </field>

    <field name="status">
        <field-validator type="requiredstring">
            <message>>A value is required in status</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^[-_a-zA-Z0-9.]+$</param>
            <message>status must include only Alphabet characters and number</message>
        </field-validator>
    </field>

</validators>